<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.pokemonHachedActivity$PlaceholderFragment">

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="HP"
        android:id="@+id/buttonHp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAttack"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/buttonHp"
        android:layout_toLeftOf="@+id/buttonHp"
        android:singleLine="false"
        android:text="Attack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defense"
        android:id="@+id/buttonDefense"
        android:layout_alignTop="@+id/buttonAttack"
        android:layout_toRightOf="@+id/buttonHp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@id/buttonAttack"
        android:text="Sp.Atk"
        android:id="@+id/buttonSpAtk"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonAttack"
        android:layout_alignStart="@+id/buttonAttack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sp.Def"
        android:id="@+id/buttonSpDef"
        android:layout_alignTop="@+id/buttonSpAtk"
        android:layout_alignRight="@+id/buttonDefense"
        android:layout_alignStart="@+id/buttonDefense" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:id="@+id/buttonSpeed"
        android:layout_alignLeft="@id/buttonHp"
        android:layout_alignRight="@id/buttonHp"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/buttonSpAtk"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
